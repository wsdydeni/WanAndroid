<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.wsdydeni.module_main.home.popular.PopularBinder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp">

        <TextView
            android:id="@+id/home_popular_article"
            android:text="@string/popular_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:onClick="@{(view) -> data.onClick(view)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:onClick="@{(view) -> data.onClick(view)}"
            android:textSize="18sp"
            android:id="@+id/home_popular_project"
            android:text="@string/popular_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            app:layout_constraintBottom_toBottomOf="@id/home_popular_article"
            app:layout_constraintTop_toTopOf="@id/home_popular_article"
            app:layout_constraintStart_toEndOf="@id/home_popular_article"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_popular_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/home_popular_article" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>